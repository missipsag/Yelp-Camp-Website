<%- layout('layouts/boilerplate.ejs') %>
  


<div class="row  ">
  <h1 class="text-center">Edit Campground Info</h1>
  <div class="col-6 offset-3 ">
    <form action="/campgrounds/<%= campground._id %>?_method=PATCH" method="post" class="validated-form" novalidate>
      <div class="mb-3">
        <label class="form-label" for="name">Name :</label>
          <input class="form-control" type="text" name="name" id="name" value="<%= campground.name %>" required>
      </div>
      <div class="mb-3">
        <label class="from-label" for="location">Location :</label>
          <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>" required>
        
      </div>
      <div class="mb-3">
        <label class="from-label" for="image">image Url:</label>
          <input  class="form-control" type="text" name="image" id="image" value="<%= campground.image %>"required>
        
      </div>
      <div class="mb-3">
        <label class="from-label" for="description">Description :</label>
          <textarea class="form-control" type="text" name="description"
            id="description" required><%= campground.description %></textarea>
        
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="price" id="price"
          value="<%= campground.price %> " required>
      </div>

      <div class="mb-3">
        <button class="btn btn-info">submit</button>
      </div>
    </form>
  </div>

</div>














